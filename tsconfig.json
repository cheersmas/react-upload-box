{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true,
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": [
    "src/components",
    "src/hooks",
    "src/utils",
    "src/types",
    "src/styles",
    "src/custom.d.ts"
  ],
  "exclude": [
    "__tests__/**/*.test.tsx",
    "node_modules",
    "dist",
    "rollup.config.js"
  ],
  "files": ["src/react-component.tsx"]
}
